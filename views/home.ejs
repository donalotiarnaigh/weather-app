<%- include("partials/header"); -%>

<div class="home-container">
  <div class="weather-search-card">
    <div class="weather-app-title mb-4">
      <i class="bi bi-cloud-sun display-4 text-primary mb-3"></i>
      <h1>Weather Forecast</h1>
      <p class="lead text-muted">Get real-time weather information for any city</p>
    </div>
    
    <div class="search-form-container">
      <form action="/" method="post">
        <div class="mb-4">
          <label for="cityInput" class="form-label fw-bold">
            Where would you like the current weather for?
          </label>
          <div class="input-group input-group-lg">
            <input
              id="cityInput"
              type="text"
              name="cityName"
              class="form-control"
              placeholder="Enter city name..."
              aria-label="City name"
              aria-describedby="search-button"
              required
              autofocus
            />
            <button type="submit" class="btn btn-primary" id="search-button">
              <i class="bi bi-search me-1"></i> Search
            </button>
          </div>
        </div>
      </form>
    </div>
    
    <div class="search-tips mt-4">
      <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i> Try searching for cities like London, New York, or Tokyo
      </small>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
