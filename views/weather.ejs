<%- include("partials/header"); -%>

<div class="weather-result card p-4">
  <div class="card-body text-center">
    <h1 class="result-title card-title">
      The temperature is <%= temp %> degrees Celsius in <%= location %>
    </h1>
    <h2 class="weather-description card-subtitle mb-3">
      The weather in <%= location %> is: <%= description %>
    </h2>
    <img
      src="<%= imageURL %>"
      alt="Weather icon for <%= description %>"
      class="weather-icon img-fluid"
    />
    <div class="mt-4">
      <a href="/" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Search Again
      </a>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
